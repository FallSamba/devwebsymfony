<div class="container">
<h1 class="text-center">Gerer les plats <br></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Prix</th>
      
  
    </tr>
  </thead>
  <tbody>
  {% for dat in data%}
    <tr>
      <th scope="row">{{dat.id}}</th>
      <td>  {{dat.name}}</td>
      <td>{{dat.prix}}</td>
     <td><a href="{{path('updateplat', {'id':dat.id})}}"><button type="button" class="btn btn-warning">Modifier</button></a></td>
     <td><a href="{{path('deleteplat', {'id':dat.id})}}"> <button type="button" class="btn btn-danger">X</button></a></td>

    </tr>
    {% endfor%}

  </tbody>
</table>


